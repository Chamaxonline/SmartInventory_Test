<!-- Select2 -->
<link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
<link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
<!-- Bootstrap4 Duallistbox -->
<link rel="stylesheet" href="~/plugins/bootstrap4-duallistbox/bootstrap-duallistbox.min.css">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Main content -->
                    <section class="content">
                        <div class="container-fluid">
                            <div class="card card-info">
                                <div class="card-header">
                                    <h3 class="card-title">Add User</h3>
                                </div>
                                <!-- /.card-header -->
                                <!-- form start -->
                                <form class="form-horizontal">
                                    <div class="card-body">
                                        <div class="form-group row">
                                            <label for="tbxFirstName" class="col-sm-2 col-form-label">First Name</label>
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" id="tbxFirstName" placeholder="First Name">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="tbxLastName" class="col-sm-2 col-form-label">Last Name</label>
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" id="tbxLastName" placeholder="Last Name">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="tbxUserName" class="col-sm-2 col-form-label">User Name</label>
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" id="tbxUserName" placeholder="User Name">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="tbxPassword" class="col-sm-2 col-form-label">Password</label>
                                            <div class="col-sm-6">
                                                <input type="password" class="form-control" id="tbxPassword" placeholder="Password">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">User Role</label>
                                            <div class="col-sm-6">
                                                <select class="form-control select2bs4" style="width: 100%;" id="userRoles">
                                                    <option value="0">Select Role</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="offset-sm-2 col-sm-10">
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" id="cbxActive">
                                                    <label class="form-check-label" for="cbxActive">Active</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <button type="button" class="btn btn-info" onclick="SaveUser()">Save</button>
                                        <button type="submit" class="btn btn-default float-right">Cancel</button>
                                    </div>
                                    <!-- /.card-footer -->
                                </form>
                            </div>
                            <!-- /.card -->
                            <div class="row">
                                <div class="col-12">
                                    @Html.Partial("_UserList.cshtml")

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

